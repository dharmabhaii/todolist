<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>todolist</title>
</head>
<body>
    
    <div class="box" id="heading">
        <h1 class="day" >Today is  <%= listtitle %>  </h1>
    </div>
<div class="box" >
    
         
        <% newlistitem.forEach(function(k){   %>
            
               <form action="/delete" method="post"> 
                <div class="item"> 
                   <input type="checkbox" name="checkbox" value="<%= k._id %>" onChange="this.form.submit()">
                   <p><%= k.newitem %></p>
                </div>
               </form> 
            
        <% }) %>
        
        <form action="/" method="post" class="form" >
            <input type="text" name="newitem" class="input" placeholder="New item" autocomplete="off">
            <button type="submit" name="list" value="<%= listtitle %>"  class="button">+</button>
    
   
</div>
    
   
    </form>
</body>
</html>